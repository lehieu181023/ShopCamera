@using System.Globalization
@{
    var BestSeller = ViewData["BestSellers"] as List<CameraTuanA.Models.Product>;
    var NewProducts = ViewData["NewProducts"] as List<CameraTuanA.Models.Product>;
    var AllProducts = ViewData["AllProducts"] as List<CameraTuanA.Models.Product>;
}
<div class="container-fluid product pt-5">
    <div class="container py-5">
        <div class="tab-class">
            <div class="row g-4">
                <div class="col-lg-4 text-start wow fadeInLeft" data-wow-delay="0.1s">
                    <h1>Sản phẩm</h1>
                </div>
                <div class="col-lg-8 text-end wow fadeInRight" data-wow-delay="0.1s">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item mb-4">
                            <a class="d-flex mx-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill"
                               href="#tab-1">
                                <span class="text-dark" style="width: 130px;">Tất cả sản phẩm</span>
                            </a>
                        </li>
                        <li class="nav-item mb-4">
                            <a class="d-flex py-2 mx-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Hàng mới về</span>
                            </a>
                        </li>
                        <li class="nav-item mb-4">
                            <a class="d-flex mx-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Bán chạy nhất</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var item in (AllProducts ?? Enumerable.Empty<Product>()).Take(8))
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <div class="product-item rounded wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="product-item-inner border rounded">
                                        <div class="product-item-inner-item">
                                            <img src="@item.MainImage" class="img-fluid w-100 rounded-top" alt="">
                                            @if (item.CreatedAt >= DateTime.Now.AddMonths(-1))
                                            {
                                                <div class="product-new">New</div>
                                            }
                                            <div class="product-details">
                                                <a href="/SingleProduct/@item.Id"><i class="fa fa-eye fa-1x"></i></a>
                                            </div>
                                        </div>
                                        <div class="text-center rounded-bottom p-4">
                                            <a class="d-block mb-2">Camera</a>
                                            <a href="/SingleProduct/@item.Id" class="d-block h4">@item.ProductName</a>
                                            <del class="me-2 fs-5">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", item.OriginalPrice)</del>
                                            <span class="text-primary fs-5">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", item.SellingPrice)</span>
                                        </div>
                                    </div>
                                    <div class="product-item-add border border-top-0 rounded-bottom  text-center p-4 pt-0">
                                        <a onclick="addToCart(@item.Id)"
                                           class="btn btn-primary border-secondary rounded-pill py-2 px-4 mb-4">
                                            <i class="fas fa-shopping-cart me-2"></i> Add To Cart
                                        </a>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (item.RatingCount <= 0)
                                                    {
                                                        item.RatingScore = 5;
                                                    }
                                                    if (i <= item.RatingScore)
                                                    {
                                                        <i class="fa fa-star text-primary"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-star"></i>
                                                    }
                                                }    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
