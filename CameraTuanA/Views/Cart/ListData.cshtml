@model List<CameraTuanA.Models.ShoppingCart>
@using System.Globalization

<!-- Trang Giỏ Hàng Bắt Đầu -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                        <th scope="col">Xử lý</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <p class="mb-0 py-4">@item.Product.ProductName</p>
                            </th>
                            <td>
                                <p class="mb-0 py-4">@item.Product.ProductCode</p>
                            </td>
                            <td>
                                <p class="mb-0 py-4">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", item.Product.SellingPrice)</p>
                            </td>
                            <td>
                                <div class="input-group quantity py-4" style="width: 100px;">
                                    <div class="input-group-btn">
                                            <button class="btn btn-sm btn-minus rounded-circle bg-light border" onclick="Cart.addToCart(@item.Product.Id,-1);">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm text-center border-0" value="@item.Quantity">
                                    <div class="input-group-btn">
                                            <button class="btn btn-sm btn-plus rounded-circle bg-light border" onclick="Cart.addToCart(@item.Product.Id,1);">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 py-4">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", item.Product.SellingPrice * item.Quantity)</p>
                            </td>
                            <td class="py-4">
                                <button class="btn btn-md rounded-circle bg-light border" onclick="Cart.deleteData(@item.Id);">
                                    <i class="fa fa-times text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
        @* <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Mã giảm giá">
            <button class="btn btn-primary rounded-pill px-4 py-3" type="button">Áp dụng</button>
        </div> *@
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Tổng <span class="fw-normal">Giỏ Hàng</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Tạm tính:</h5>
                            <p class="mb-0">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", Model.Sum(p => (p.Product.SellingPrice * p.Quantity)))</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Phí vận chuyển</h5>
                            <div>
                                <p class="mb-0">Cố định: 30.000 ₫</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">Chỉ giao hàng trong phạm vi Việt Nam.</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Tổng cộng</h5>
                        <p class="mb-0 pe-4">@String.Format(new CultureInfo("vi-VN"), "{0:C0}", Model.Sum(p => (p.Product.SellingPrice * p.Quantity)) + 30000)</p>
                    </div>
                    <a class="btn btn-primary rounded-pill px-4 py-3 text-uppercase mb-4 ms-4" href="/payment">
                        Thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Trang Giỏ Hàng Kết Thúc -->