@model IEnumerable<CameraTuanA.Models.Order>

@{
    ViewData["Title"] = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Order</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Order</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-12">
                            <div class="search-container row" id="divSearch">
                                <div class=" col-3">
                                    <input type="text" id="keySearch" name="keySearch" class="form-control" placeholder="Nhập từ khóa tìm kiếm">
                                </div>
                                <input type="hidden" id="page" name="page" value="1" />
                                <input type="hidden" id="pageSize" name="pageSize" value="10" />
                                <div class=" col-3">
                                    <select class="form-select" id="status" name="status" onchange="Order.loadData()">
                                        <option value="-1">-- Chọn trạng thái đơn hàng --</option>
                                        @foreach (var status in Enum.GetValues(typeof(EnumMethod.OrderStatus)).Cast<EnumMethod.OrderStatus>())
                                        {    
                                            <option value="@((int)status)">
                                                @EnumMethod.OrderStatusToString((int)status)
                                            </option>
                                        }
                                    </select>
                                </div>
                                <button type="button" class="btn btn-primary col-1" id="searchButton" onclick="Order.loadData()">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Table with stripped rows -->
                    <div id="listdata">
                        <!-- Data here -->
                    </div>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>


<div id="target-div">

</div>

@section Scripts {
    <script src="~/Appjs/Admin/Order.js"></script>
    <script src="~/Appjs/Admin/UploadFile.js"></script>
}




