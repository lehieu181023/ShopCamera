@model List<CameraTuanA.Models.Order>
@removeTagHelper "Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    int pageNumber = ViewBag.PageNumber ?? 10;     // Tổng số trang
    int pageCurrent = ViewBag.PageCurrent ?? 1;     // Trang hiện tại
    int pageSize = ViewBag.PageSize ?? 10;          // Số dòng / trang
    int[] pageSizes = new[] { 5, 10, 20, 50 };      // Danh sách chọn số dòng
    int maxPages = 7; // số nút tối đa
    int startPage = Math.Max(1, pageCurrent - maxPages / 2);
    int endPage = Math.Min(pageNumber, startPage + maxPages - 1);

    // Nếu cuối danh sách mà số nút ít hơn maxPages thì đẩy startPage về
    if (endPage - startPage + 1 < maxPages)
    {
        startPage = Math.Max(1, endPage - maxPages + 1);
    }
}
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Mã đơn hàng</th>
            <th>Tên người nhận</th>
            <th>Số điện thoại</th>
            <th>Ngày đặt hàng</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center align-middle">@(stt++)</td>
                <td class="text-center align-middle">@item.OrderCode</td>
                <td class="text-center align-middle">@item.RecipientName</td>
                <td class="align-middle">@item.RecipientPhone</td>
                <td class="text-center align-middle">@item.OrderDate.ToString("dd/MM/yyyy")</td>
                <td class="text-center align-middle">
                    <select class="form-select mt-2" onchange="Order.changeStatus(@item.Id, this.value)">
                        @foreach (var status in Enum.GetValues(typeof(EnumMethod.OrderStatus)).Cast<EnumMethod.OrderStatus>())
                        {
                            bool isSelected = (int)status == item.Status;
                            <option value="@((int)status)" @(isSelected ? "selected" : "")>
                                @EnumMethod.OrderStatusToString((int)status)
                            </option>
                        }
                    </select>
                </td>
                <td class="text-center align-middle">
                    <!-- Nút chi tiết -->
                    <a href="/admin/order/Detail/@item.Id" class="btn btn-info text-white ">
                        <i class="bi bi-eye"></i> Chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    <div class="page-size">
        <div>
            <label for="pageSize">Số dòng / trang: </label>
            <select onchange="$('#pageSize').val($(this).val()); Order.loadData();">
                @foreach (var size in pageSizes)
                {
                    if (size == pageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>

        </div>
    </div>

    <ul class="pagination">
        @* Nút về trang đầu *@
        @if (pageCurrent > 1)
        {
            <li><a onclick="$('#page').val(1); Order.loadData();">«</a></li>
        }

        @* Nút lùi 1 *@
        @if (pageCurrent > 1)
        {
            <li><a onclick="$('#page').val(@(pageCurrent - 1)); Order.loadData();" >‹</a></li>
        }

        @* Các nút số *@
        @for (int i = startPage; i <= endPage; i++)
        {
            if (i == pageCurrent)
            {
                <li class="active"><span>@i</span></li>
            }
            else
            {
                <li><a onclick="$('#page').val(@i); Order.loadData();">@i</a></li>
            }
        }

        @* Nút tiến 1 *@
        @if (pageCurrent < pageNumber)
        {
            <li><a onclick="$('#page').val(@(pageCurrent + 1)); Order.loadData();" >›</a></li>
        }

        @* Nút tới trang cuối *@
        @if (pageCurrent < pageNumber)
        {
            <li><a onclick="$('#page').val(@pageNumber); Order.loadData();" >»</a></li>
        }
    </ul>
</div>
